<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".view.mymessage.MyMessageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="用户信息"/>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_178"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="用户头像"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"/>
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/user_tou_hdpi"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:background="#f2f2f2"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_34"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="夏天的雪"
                    android:layout_gravity="center_vertical"
                    android:textColor="#999999"/>
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:background="#f2f2f2"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_34"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="用户性别"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="男"
                    android:layout_gravity="center_vertical"
                    android:textColor="#999999"/>
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:background="#f2f2f2"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_34"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出生日期"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="1999-02-25"
                    android:layout_gravity="center_vertical"
                    android:textColor="#999999"/>
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:background="#f2f2f2"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="15838864169"
                android:layout_gravity="center_vertical"
                android:textColor="#999999"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="1538116341@163.com"
                android:layout_gravity="center_vertical"
                android:textColor="#999999"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="重置密码"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"/>
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/com_icon_next_default_xhdpi"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_gravity="center_horizontal"/>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/my_message_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/com_icon_my_default_hdpi"/>
    </RelativeLayout>
</LinearLayout>