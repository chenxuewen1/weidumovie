<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    fresco:cardCornerRadius="@dimen/dp_8"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_164"
        android:layout_marginRight="@dimen/dp_20">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_image"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_164"
            fresco:roundedCornerRadius="@dimen/dp_8"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:progressBarImage="@drawable/loging"
            fresco:failureImage="@mipmap/error"
            fresco:retryImage="@mipmap/retry"
            />
        <TextView
            android:id="@+id/hot_filmname"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_alpha"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#fff"
            android:alpha="0.7"
            android:textSize="@dimen/sp_14"
            android:text="暮光巴黎"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
