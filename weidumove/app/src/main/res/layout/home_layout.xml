<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <!--首页-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_186"
            android:src="@mipmap/hdpi_2"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/home_dingwei"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@mipmap/com_icon_loc_white_default_hdpi"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/sp_14"/>
        <TextView
            android:id="@+id/home_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_35"
            android:text="北京"/>
        <com.bw.movie.view.custom.CustomSearch
            android:id="@+id/customsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_33"
            ></com.bw.movie.view.custom.CustomSearch>
        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/home_film_flow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_223"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_fengexian_jianbian"
            android:layout_below="@+id/home_film_flow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/home_film_flow"
            android:layout_marginTop="@dimen/dp_40"
            android:text="热门电影"/>
        <ImageView
            android:id="@+id/home_shangmovie"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_below="@+id/home_film_flow"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:src="@mipmap/com_icon_next_default_hdpi"/>
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@+id/home_shangmovie"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#d11de9"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_rec1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_shangmovie"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_24"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/home_rec1"
            android:layout_marginTop="@dimen/dp_10"
            android:text="正在热映"/>
        <ImageView
            android:id="@+id/home_reying"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_below="@+id/home_rec1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:src="@mipmap/com_icon_next_default_hdpi"/>
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_below="@+id/home_rec1"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="#d11de9"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_rec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_reying"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#333333"
            android:layout_below="@+id/home_rec2"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:text="正在上映"/>
        <ImageView
            android:id="@+id/home_shangying"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_below="@+id/home_rec2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/com_icon_next_default_hdpi"/>
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@+id/home_rec2"
            android:background="#d11de9"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_rec3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_shangying"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_24"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>
