<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".view.ClassifyActivity">
    <RadioGroup
        android:id="@+id/classify_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/classify_radio0"
            android:layout_width="@dimen/dp_83"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:gravity="center"
            android:text="热门电影"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/radiobutton_textcolor"
            android:background="@drawable/select_classify_select"
            />
        <RadioButton
            android:id="@+id/classify_radio1"
            android:layout_width="@dimen/dp_83"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/radiobutton_textcolor"
            android:background="@drawable/select_classify_select"
            android:text="正在热映"
           />
        <RadioButton
            android:id="@+id/classify_radio2"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/radiobutton_textcolor"
            android:background="@drawable/select_classify_select"
            android:text="即将上映"
            />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/classify_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>
    <ImageView
        android:id="@+id/classify_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/com_icon_my_default_hdpi"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>