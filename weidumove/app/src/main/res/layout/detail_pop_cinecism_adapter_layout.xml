<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <!--影评适配器-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pop_detail_cinecism_adapter_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/user_tou_hdpi"/>
        <TextView
            android:id="@+id/pop_detail_cinecism_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:text="Hwl360"/>
    </LinearLayout>
    <TextView
        android:id="@+id/pop_detail_cinecism_adapter_pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"
        android:lines="4"
        android:ellipsize="end"
        android:text="还可以吧！结局就是有点不太好"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pop_detail_cinecism_adapter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:text="时间"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/pop_detail_cinecism_adapter_pinglun_edtext"
            android:layout_marginLeft="-70dp">
            <ImageView
                android:id="@+id/pop_detail_cinecism_adapter_dianzan"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/com_icon_praise_default_hdpi"/>
            <TextView
                android:id="@+id/pop_detail_cinecism_adapter_dianzannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1666"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:id="@+id/pop_detail_cinecism_adapter_pinglun_edtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:drawableLeft="@mipmap/com_icon_comment_default_hdpi"
            android:drawablePadding="@dimen/dp_6"
            android:text="166"/>
    </RelativeLayout>
</LinearLayout>