<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10">
    <!--预告-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="预告片"
        />
    <ImageView
        android:id="@+id/pop_detail_announce_hide"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_gravity="right"
        android:src="@mipmap/com_icon_down_default_hdpi"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@drawable/zise"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pop_detail_announce_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_65"></android.support.v7.widget.RecyclerView>
</android.support.v7.widget.CardView>
