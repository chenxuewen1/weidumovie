<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical">
    <!--详情pop-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18">
        <TextView
            android:id="@+id/movie_schedule_cinemaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="GGV影城"/>
        <TextView
            android:id="@+id/movie_schedulecinema_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:singleLine="true"
            android:text="地址"/>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/com_icon_navigation_default_hdpi"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_327"
        android:layout_height="@dimen/dp_149"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_gray_5dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/hdpi_4"/>
        <ImageView
            android:id="@+id/movie_schedule_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_139"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_4"
            android:src="@mipmap/nointernet_hdpi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/movie_schedule_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_15"
                android:text="影片名:"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15" />
            <TextView
                android:id="@+id/movie_schedule_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_5"
                android:text="类型:"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/movie_schedule_daoyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_5"
                android:text="导演:"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/movie_schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_5"
                android:text="时长:"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/movie_schedule_chandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_5"
                android:text="产地:"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_schedule_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11">
        </android.support.v7.widget.RecyclerView>
        <ImageView
            android:id="@+id/movie_schedule_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@mipmap/com_icon_my_default_hdpi"/>
    </RelativeLayout>
</LinearLayout>