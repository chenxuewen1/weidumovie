<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity"
    android:orientation="vertical"
    android:background="@mipmap/hdpi_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/com_icon_movie_default_hdpi"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:text="电影详情"/>
        <ImageView
            android:id="@+id/_detail_follow"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_collection_default_hdpi"/>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:textColor="#fff"
        android:text="铁血战士"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="@dimen/dp_259"
        android:layout_height="@dimen/dp_320"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/tiexue_hdpi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="horizontal">
        <Button
            android:id="@+id/detail_detail"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/shape_detail_16dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="详情"/>
        <Button
            android:id="@+id/detail_trailer"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/shape_detail_16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="预告"/>
        <Button
            android:id="@+id/detail_still"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/shape_detail_16dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="剧照"/>
        <Button
            android:id="@+id/detail_cinecism"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/shape_detail_16dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="影评"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        >
        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@mipmap/com_icon_my_default_hdpi"/>
        <ImageView
            android:id="@+id/detail_buy"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/buy_hdpi"/>
    </RelativeLayout>
</LinearLayout>