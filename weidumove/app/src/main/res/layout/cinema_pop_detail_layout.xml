<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_white_20dp"
    >
        <TextView
            android:id="@+id/pop_cinema_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_90"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="详情"
            />
        <TextView
            android:id="@+id/pop_cinema_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_180"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="评论"
            />
        <ImageView
            android:id="@+id/pop_cinema_hide"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:src="@mipmap/com_icon_down_default_hdpi"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_cinema_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:visibility="gone"
            ></android.support.v7.widget.RecyclerView>

</RelativeLayout>